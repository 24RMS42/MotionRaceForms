<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MotionRaceBrowser.Views.HomePage">
	<ContentPage.Content>
        <StackLayout>
            <WebView x:Name="webView" WidthRequest="2000" HeightRequest="2000" BackgroundColor="Green"/>
            <StackLayout Orientation="Horizontal" HeightRequest="55" Margin="20,0,20,0">
                <Button Image="home.png" WidthRequest="24" HorizontalOptions="Start" Clicked="OnHomeButtonClicked" />
                <Button Image="return.png" WidthRequest="24" Margin="20,0" Clicked="OnBackButtonClicked" />
                <Button Image="logout.png" WidthRequest="24" Margin="0" Clicked="OnLogoutButtonClicked" />
                <Button Image="refresh.png" WidthRequest="24" HorizontalOptions="EndAndExpand" Clicked="OnRefreshButtonClicked" />
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
